[ -z "$DEBUG" ] || set -x

export STRESS_METRICS_RUN_DIR=/var/vcap/sys/run/stress_metrics
export STRESS_METRICS_LOG_DIR=/var/vcap/sys/log/stress_metrics
export STRESS_METRICS_PID_FILE="$STRESS_METRICS_RUN_DIR/pid"

export STRESS_METRICS_INTERVAL_IN_SECONDS=<%= p("stress_metrics.interval_in_seconds").to_i %>

export RABBITMQ_ENV="<%= link("rabbitmq-server").p("rabbitmq-server.env") %>"

export PATH="/var/vcap/jobs/stress_metrics/bin:$PATH"
